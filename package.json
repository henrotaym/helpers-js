{
  "name": "@henrotaym/helpers",
  "version": "1.0.2",
  "description": "A collection of common helpers.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "lint": "eslint . --fix",
